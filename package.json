{
  "name": "neoncut-frisor-plattform",
  "version": "1.0.0",
  "description": "Sveriges första kompletta frisörplattform med neon-design - Prisjämförelse, Drop-in, Hemfrisör & AI-analys",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "dev": "live-server --port=3000 --watch=styles,js,data --open=/index.html",
    "build": "node build.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"**/*.{html,css,js,json}\"",
    "serve": "http-server -p 8080 -c-1",
    "deploy": "npm run build && npm run test"
  },
  "keywords": [
    "frisör",
    "salong",
    "beauty",
    "hair",
    "booking",
    "neon",
    "sweden",
    "prisjämförelse",
    "drop-in",
    "hemfrisör",
    "ai-analysis",
    "web-app"
  ],
  "author": {
    "name": "NeonCut Team",
    "email": "dev@neoncut.se",
    "url": "https://neoncut.se"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neoncut/frisor-plattform.git"
  },
  "bugs": {
    "url": "https://github.com/neoncut/frisor-plattform/issues"
  },
  "homepage": "https://neoncut.se",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "cssnano": "^6.0.1",
    "uglify-js": "^3.17.4",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "google-fonts": "^1.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie < 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "port": 3000,
    "apiUrl": "https://api.neoncut.se/v1",
    "cdnUrl": "https://cdn.neoncut.se"
  },
  "files": [
    "index.html",
    "styles/",
    "js/",
    "data/",
    "assets/",
    "README.md"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "pre-push": "npm run test"
    }
  },
  "release": {
    "branches": [
      "main",
      "develop"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "contributors": [
    {
      "name": "Marcus Andersson",
      "email": "marcus@neoncut.se",
      "role": "Full Stack Developer"
    },
    {
      "name": "Emma Strömberg",
      "email": "emma@neoncut.se",
      "role": "UI/UX Designer"
    }
  ],
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/neoncut"
  },
  "private": true,
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}